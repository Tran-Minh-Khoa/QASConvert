<div class="xtra-scrollable-control">
    <h4 class="bold-text">I. HÀNH CHÍNH/ PATIENT INFORMATION</h4>
     <div class="flow-layout-panel">
            <div class="label-group">
                
            <span>Phòng khám/ Clinic: @RoomName </span>
            </div>
            <div class="label-group">
                
            <span>Mã BN/ PID:@PatientHospitalID </span>
            </div>
            <div class="label-group">
                
            <span>Họ và tên/ Patient's name:@FullName</span>
            </div>
            <div class="label-group">

            <span>Ngày giờ đến khám/ Examination date:@ExamineDate</span>
            </div>
            <div class="label-group">

            <span>Ngày sinh/ DOB:@DoBName </span>
            </div>
            <div class="label-group">

            <span>Tuổi/ Age:@Age </span>
            </div>
            <div class="label-group">

            <span>Giới tính/ Gender:@GenderName </span>
            </div>
            <div class="label-group">
            <span>Quốc tịch/ Nationality:@Nationality</span>
            </div>
            <div class="label-group">

            <span>Địa chỉ/ Address: @Address </span>
            </div>
            <div class="label-group">

            <span>SĐT/ Phone Number:@PhoneNumber </span>
            </div>
     </div>
    
    <MemoEditAutoSizeWithLibrary CategoryName="Lý do đến khám" Enabled="true" />

    <h4 class="bold-text">II. Hỏi BỆNH/MEDICAL INQUIRY</h4>
    <label>Lý do đến khám/ Chief complaint</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Lý do đến khám" Enabled="true" />
    <label>Quá trình bệnh lý/ History of present illness</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Quá trình bệnh lý" Enabled="true" />
    <h4 class="bold-text">Tiền sử bệnh/history</h4>
    <label>Tiền sử bệnh cá nhân/ Personal medical history</label>
