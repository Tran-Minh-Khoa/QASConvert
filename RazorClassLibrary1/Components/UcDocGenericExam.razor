 *@    <label>Dị ứng/ Allergies</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Tiền sử bệnh - Dị ứng" Enabled="true" />
    <label>Tiền sử nội khoa/ Medical history</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Tiền sử bệnh - Tiền sử nội khoa" Enabled="true" />
    <label>Tiền sử ngoại khoa/ Surgical history</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Tiền sử bệnh - Tiền sử ngoại khoa" Enabled="true" />
    <label>Thuốc đang dùng/ Medication history</label>
    <UcLichSuDonThuoc Enabled="true" />
   
    <label>Tiền sử gia đình/ Family medical history</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Tiền sử bệnh - Tiền sử gia đình" Enabled="true" />
    <h4 class="bold-text">III. KHÁM LÂM SÀNG/PHYSICAL EXAMINATION </h4>
    <label class="bold-text">Chỉ số sinh hiệu/ Vital Index</label>
    <UcVitalSignBilingual Pulse="@Pulse" BloodPressure="@BloodPressure" BMI="@BMI" Breath="@Breath" Height="@Height" Weight="@Weight" />
    <label>Toàn thân/ General condition</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Khám lâm sàng - Toàn thân" Enabled="true" />
    <label>Các bộ phận/ Review of systems</label>
    <MemoEditAutoSizeWithLibrary CategoryName="Khám lâm sàng - Các bộ phận" Enabled="true" />
